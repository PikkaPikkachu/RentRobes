<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.tanvidadu.learnit.ListItem"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/list_item_selected_name"
        android:padding="12dp"
        android:gravity="center"
        />

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:padding="18dp"
            android:id="@+id/list_item_selected_imageId"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Name of Brand"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_brand"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Price"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Price"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Size"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Colour"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Color"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="RENT "
        android:textColor="#3bcc79"
        android:id="@+id/Payment"
        />
    </LinearLayout>
</ScrollView>
