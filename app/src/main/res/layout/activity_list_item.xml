<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.tanvidadu.learnit.ListItem"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/list_item_selected_name"
        android:padding="12dp"
        android:gravity="center"
        />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:padding="18dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:id="@+id/list_item_selected_imageId"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="BRAND"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:paddingTop="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Name of Brand"
            android:textSize="18sp"
            android:paddingLeft="12dp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_brand"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="PRICE"
                    android:paddingLeft="12dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Price"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Price"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SIZE"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Size"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="COLOUR"
                android:textStyle="bold"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:paddingTop="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="Colour"
            android:paddingLeft="12dp"
            android:textSize="18sp"
            android:paddingTop="18dp"
            android:id="@+id/list_item_selected_Color"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="RENT "
        android:padding="2dp"
        android:textColor="#3bcc79"
        android:id="@+id/Payment"
        />
    </LinearLayout>
</ScrollView>
